set tabstop=8       " 8 spaces tab
set expandtab       " Expand tabs to spaces
set softtabstop=4   " tab inserts 4 spaces
set shiftwidth=4    " indent size is 4 spaces
set smarttab        " indent object instead of tabs when starting lines
set shiftround      " round up spaces to multiples of shiftwidth
set nojoinspaces    " Don't turn spaces into tabs
